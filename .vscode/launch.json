    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Gin Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}", // 你的main包路径
            "args": [],
            "env": {
                "GIN_MODE": "debug" // 确保Gin处于调试模式
            },
            "showLog": true,
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        }
    ]
}